{
    "name": "shfarzam/data-validation",
    "description": "A PHP library for data validation including email, URL, and password validation methods.",
    "license": "MIT",
    "type": "library",
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "9.6.x-dev"
    },
    "config": {
        "allow-plugins": {
            "third-party/required-plugin": true,
            "my-organization/*": true,
            "unnecessary/plugin": true,
            "kylekatarnls/update-helper": true
        }
    },
    "keywords": [
        "validation",
        "email",
        "url",
        "password"
    ],
    "autoload": {
        "psr-4": {
            "shfarzam\\DataValidation\\": "src/Validation"
        }
    },
    "authors": [
        {
            "name": "Shahriar Farzam",
            "email": "sh.farzam@hotmail.com"
        }
    ],
    "scripts": {
        "test": [
            "phpunit tests/*.php"
        ]
    }
}